#!/bin/bash
tolower() {
  tr '[:upper:]' '[:lower:]'
}

dir="`dirname "$0"`"
arch="`uname -m | tolower`"
os="`uname | tolower`"
bin="${dir}/bin/${os}/${arch}"
exe="${bin}/inexor"

echo >&2 "CALLING: ${exe}"
find "$dir"/media/ -maxdepth 1 -print0                      \
  | sed 's/^/-k/' -z                                       \
  | xargs --null "${exe}" -q"~/.inexor"
